{
  "name": "blog",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "biome lint . --apply",
    "format": "biome format . --write"
  },
  "prettier": {
    "tabWidth": 2,
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "astro": "^4.7.0",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@astrojs/rss": "^4.0.5",
    "@biomejs/biome": "^1.7.1",
    "@iconify-json/uil": "^1.1.8",
    "@types/node": "^20.12.7",
    "@unocss/reset": "^0.59.4",
    "lightningcss": "^1.24.1",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.1",
    "unocss": "^0.59.4"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,astro}": "pnpm format & pnpm lint"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm run format"
  }
}
