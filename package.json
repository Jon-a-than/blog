    "astro": "^4.7.1",
    "typescript": "^5.4.5",
    "unocss": "^0.59.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@iconify-json/file-icons": "^1.1.8",
    "@iconify-json/logos": "^1.1.42",
    "@iconify-json/uil": "^1.1.8",
